<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mpesatariffs" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>mpesatariffs</name>
    <description>
        2017 Mpesa Tariffs Calculator.
    </description>
    <author email="cnongera@gmail.com" href="http://cordova.io">
        Clement Ongera Nyangoya
    </author>
    <content src="index.html" />
    <icon src="www/img/mpesa.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
